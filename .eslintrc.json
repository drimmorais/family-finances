{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "space-before-function-paren": "off",
        "camelcase": "off",
        "no-unused-vars": "off",
        "no-tabs": "off",
        "indent": [
            "error",
            "tab",
            {
                "SwitchCase": 1
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "rules": {
                "semi": [
                    "error",
                    "always"
                ]
            }
        }
    ]
}
